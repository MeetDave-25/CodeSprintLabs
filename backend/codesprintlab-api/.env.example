APP_NAME="CodeSprint Labs API"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://localhost:8000

# MongoDB Atlas Connection
# Replace with your MongoDB Atlas connection string
DB_CONNECTION=mongodb
DB_DSN=mongodb+srv://YOUR_USERNAME:YOUR_PASSWORD@YOUR_CLUSTER.mongodb.net/codesprintlab?retryWrites=true&w=majority
DB_DATABASE=codesprintlab

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Laravel Sanctum
SANCTUM_STATEFUL_DOMAINS=localhost:3000,localhost:3001
SESSION_DRIVER=cookie
SESSION_LIFETIME=120

# File Storage
FILESYSTEM_DISK=public

# Mail Configuration (optional - for notifications)
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@codesprintlabs.com"
MAIL_FROM_NAME="${APP_NAME}"

# Razorpay (for payments)
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=

# Cloudinary (for file storage - resumes, documents)
# Get credentials from https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
CLOUDINARY_URL=

# JWT Secret (auto-generated with: php artisan jwt:secret)
JWT_SECRET=
